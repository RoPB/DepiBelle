<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
            xmlns:viewModelBase="clr-namespace:DepiBelle.ViewModels;assembly=DepiBelle" 
            xmlns:views="clr-namespace:DepiBelle.Views;assembly=DepiBelle" 
            viewModelBase:ViewModelAutoWire.AutoWireViewModel="true"
            xmlns:plugin="clr-namespace:Plugin.Badge.Abstractions;assembly=Plugin.Badge.Abstractions" 
            x:Class="DepiBelle.Views.HomeTabbedView"
            x:Name="HomeTabbedPage">
    
            <NavigationPage.TitleView>
                <Label Text="Depi Belle" TextColor="{StaticResource White}"/>
            </NavigationPage.TitleView>
            
            <views:PromotionsView Title="Promos" 
                            Icon="ic_offer.png"
                            />
            <views:BodySelectionView Title="Cuerpo" 
                            Icon="ic_body.png"
                            />
            <views:PurchaseView Title="Compra"  
                            Icon="ic_cart.png"
                            plugin:TabBadge.BadgeText="{Binding StrItemsAdded}"
                            />
          
</TabbedPage>
